# Helios Trading System V3.0 - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================
# ENVIRONMENT
# ============================================================
ENVIRONMENT=development
SECRET_KEY=change-me-in-production-with-strong-random-key

# ============================================================
# SERVER
# ============================================================
HOST=0.0.0.0
PORT=8000

# ============================================================
# DATABASE - PostgreSQL
# ============================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=helios_v3
POSTGRES_USER=helios
POSTGRES_PASSWORD=your_secure_password_here

# ============================================================
# DATABASE - Redis
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================
# DATABASE - InfluxDB
# ============================================================
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your_influx_token_here
INFLUX_ORG=helios
INFLUX_BUCKET=market_data

# ============================================================
# TRADING
# ============================================================
TRADING_MODE=paper
VALR_API_KEY=your_valr_api_key_here
VALR_API_SECRET=your_valr_api_secret_here
VALR_BASE_URL=https://api.valr.com
VALR_WEBSOCKET_URL=wss://api.valr.com/ws/trade

# Risk limits
MAX_POSITION_SIZE_PCT=0.20
MAX_LEVERAGE=3.0
MAX_DRAWDOWN_PCT=0.15
DAILY_LOSS_LIMIT_PCT=0.05

# ============================================================
# MACHINE LEARNING
# ============================================================
MODEL_PATH=models/helios_neural_network_40m_best.pt
SCALER_PATH=models/feature_scaler_40m.pkl

# Training config (RTX 4060 optimized)
ML_BATCH_SIZE=16
ML_ACCUMULATION_STEPS=2
ML_MIXED_PRECISION=true
ML_GRADIENT_CHECKPOINTING=true
ML_DEVICE=cuda

# ============================================================
# LLM
# ============================================================
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
OPENAI_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1024

# ============================================================
# RISK MANAGEMENT
# ============================================================
GARCH_LOOKBACK_DAYS=30
GARCH_UPDATE_INTERVAL_HOURS=4
FRACTIONAL_KELLY=0.25
MIN_CONFIDENCE=0.55
REWARD_RISK_RATIO=2.0

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=logs
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# ============================================================
# FEATURE FLAGS
# ============================================================
ENABLE_AUTO_TRADING=false
ENABLE_WEBSOCKET=true
ENABLE_ML_PREDICTIONS=true
ENABLE_LLM_ANALYSIS=true
